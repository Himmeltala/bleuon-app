{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "strictNullChecks": false,
    "baseUrl": ".",
    "paths": {
      "@mainapp/*": ["apps/mainapp/*"],
      "@subapp/*": ["apps/subapp/*"],
      "@common/*": ["common/*"]
    }
  },
  "include": [
    "apps/mainapp/**/*.ts",
    "apps/mainapp/**/*.vue",
    "apps/mainapp/**/*.tsx",
    "apps/mainapp/**/*.d.ts",
    "apps/subapp/**/*.ts",
    "apps/subapp/**/*.vue",
    "apps/subapp/**/*.tsx",
    "apps/subapp/**/*.d.ts",
    "common/**/*.ts",
    "common/**/*.vue",
    "common/**/*.tsx",
    "common/**/*.d.ts",
    "uno.config.ts",
    "vite-env.d.ts",
    "auto-imports.d.ts",
    "components.d.ts"
  ],
  "references": [{ "path": "tsconfig.node.json" }]
}
